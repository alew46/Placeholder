<div class="col-md-2 col-sm-2" style="text-align: center;">
  <div>
    <%= link_to image_tag(bookmark.image_url, class: "bookmark-image"), bookmark.url %>
  </div>
  <p><%= bookmark.pretty_url %></p>
  <div class="row" style="padding-bottom: 8px;">
    <small><%= render partial: 'likes/like', locals: { bookmark: bookmark } %> | <%= link_to 'Delete', bookmark, :method => :delete %></small>
  </div>
</div>
